  <arg name="rviz_config" default="false" />
  <arg unless="$(arg rviz_config)" name="command_args" value="" />
  <arg     if="$(arg rviz_config)" name="command_args" value="-d $(find motoman_ma1440_mh185_vertical_moveit_config)/launch/moveit.rviz" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
	args="$(arg command_args)" output="screen">
    <rosparam command="load" file="$(find motoman_ma1440_mh185_vertical_moveit_config)/config/kinematics.yaml"/>
  </node>

</launch>
