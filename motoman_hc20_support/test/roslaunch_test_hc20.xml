<launch>
  <arg name="req_arg" value="default"/>
  <arg name="yrc1000" value="yrc1000"/>
  
  <group ns="load_hc20">
    <include file="$(find motoman_hc20_support)/launch/load_hc20.launch"/>
  </group>

  <group ns="test_hc20">
    <include file="$(find motoman_hc20_support)/launch/test_hc20.launch"/>
  </group>

  <group ns="robot_interface_streaming_hc20">
    <group ns="yrc1000" >
      <include file="$(find motoman_hc20_support)/launch/robot_interface_streaming_hc20.launch">
        <arg name="robot_ip"   value="$(arg req_arg)" />
        <arg name="controller" value="$(arg yrc1000)"/>
      </include>
    </group>
  </group>

  <group ns="robot_state_visualize_hc20">
    <group ns="yrc1000" >
      <include file="$(find motoman_hc20_support)/launch/robot_state_visualize_hc20.launch">
        <arg name="robot_ip"   value="$(arg req_arg)" />
        <arg name="controller" value="$(arg yrc1000)"/>
      </include>
    </group>
  </group>
</launch>
