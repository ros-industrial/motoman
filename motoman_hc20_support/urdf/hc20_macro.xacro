<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="motoman_hc20" params="prefix">

    <!-- Properties -->
    <material name="yaskawa_white">
      <color rgba="0.99 0.99 0.99 1" />
    </material>

    <!-- link list -->
    <link name="${prefix}base_link">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/base_link.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/base_link.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_1_s">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/link_1_s.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/link_1_s.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_2_l">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/link_2_l.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/link_2_l.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_3_u">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/link_3_u.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/link_3_u.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_4_r">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/link_4_r.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/link_4_r.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_5_b">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/link_5_b.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/link_5_b.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_6_t">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/visual/link_6_t.stl"/>
        </geometry>
        <material name="yaskawa_white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20/collision/link_6_t.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}tool0"/>
    <!-- end of link list -->

    <!-- joint list -->
    <joint name="${prefix}joint_1_s" type="revolute">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1_s"/>
      <origin xyz="0 0 0.380" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${radians(-180)}" upper="${radians(180)}" effort="917.28" velocity="${radians(80)}"/>
    </joint>
    <joint name="${prefix}joint_2_l" type="revolute">
      <parent link="${prefix}link_1_s"/>
      <child link="${prefix}link_2_l"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 1 0" />
      <limit lower="${radians(-180)}" upper="${radians(180)}" effort="1223.04" velocity="${radians(80)}"/>
    </joint>
    <joint name="${prefix}joint_3_u" type="revolute">
      <parent link="${prefix}link_2_l"/>
      <child link="${prefix}link_3_u"/>
      <origin xyz="0 0 0.820" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit lower="${radians(-67)}" upper="${radians(247)}" effort="642.88" velocity="${radians(120)}"/>
    </joint>
    <joint name="${prefix}joint_4_r" type="revolute">
      <parent link="${prefix}link_3_u"/>
      <child link="${prefix}link_4_r"/>
      <origin xyz="0.880 0 0" rpy="0 0 0" />
      <axis xyz="-1 0 0" />
      <limit lower="${radians(-210)}" upper="${radians(210)}" effort="368.48" velocity="${radians(130)}"/>
    </joint>
    <joint name="${prefix}joint_5_b" type="revolute">
      <parent link="${prefix}link_4_r"/>
      <child link="${prefix}link_5_b"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit lower="${radians(-180)}" upper="${radians(180)}" effort="141.12" velocity="${radians(180)}"/>
    </joint>
    <joint name="${prefix}joint_6_t" type="revolute">
      <parent link="${prefix}link_5_b"/>
      <child link="${prefix}link_6_t"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="-1 0 0" />
      <limit lower="${radians(-210)}" upper="${radians(210)}" effort="141.12" velocity="${radians(180)}"/>
    </joint>
    <joint name="${prefix}joint_6_t-tool0" type="fixed">
      <origin xyz="0.200 0 0" rpy="${radians(180)} ${radians(-90)} 0"/>
      <parent link="${prefix}link_6_t"/>
      <child link="${prefix}tool0"/>
    </joint>
    <!-- end of joint list -->

    <!-- ROS base_link to Robot Manufacturer World Coordinates transform -->
    <link name="${prefix}base" />
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0.380" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>
  </xacro:macro>
</robot>
